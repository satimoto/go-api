type User {
    id: ID!
    pubkey: String!
    deviceToken: String!
    referralCode: String
    node: Node
}

input CreateUserInput {
    code: String!
    pubkey: String!
    deviceToken: String!
}

input UpdateUserInput {
    deviceToken: String!
}

extend type Query {
    getUser: User!
}

extend type Mutation {
    createUser(input: CreateUserInput!): User!
    updateUser(input: UpdateUserInput!): User!
}
